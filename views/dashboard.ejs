    </script>
    <script src="/js/main.js"></script>
    <script type="module">
        import { createClient } from "https://esm.sh/@supabase/supabase-js";

        const supabase = createClient(
            "https://dmgwjnsxmawqtecbkgcf.supabase.co",
            "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImRtZ3dqbnN4bWF3cXRlY2JrZ2NmIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTczNDI2OTYsImV4cCI6MjA3MjkxODY5Nn0.ToZ5Im4ci6BAgvHUHheEIP2YQqQ1_0T13-Re6kLxJ4w"
        );

        // Selecci√≥n de elementos
        const checkboxes = document.querySelectorAll(".check");
        const busqueda = document.getElementById("busqueda");
        const btnClear = document.getElementById("btnClear");
        const filas = document.querySelectorAll("#tablaGrados tbody tr");
        const statCards = document.querySelectorAll(".stat-card");



        let filtroActivo = null;

        // üéØ Funci√≥n para actualizar contadores
        function actualizarContadores() {
            const filasVisibles = Array.from(filas);

            const ambos = filasVisibles.filter(f => f.classList.contains('fila-ambos-asistieron')).length;
            const uno = filasVisibles.filter(f => f.classList.contains('fila-uno-asistio')).length;
            const ninguno = filasVisibles.filter(f => f.classList.contains('fila-ninguno-asistio')).length;
            const total = filasVisibles.length;

            document.getElementById('countAmbos').textContent = ambos;
            document.getElementById('countUno').textContent = uno;
            document.getElementById('countNinguno').textContent = ninguno;
            document.getElementById('countTotal').textContent = total;
        }

        // üéØ Funci√≥n para actualizar clase de fila seg√∫n estado
        function actualizarClaseFila(fila) {
            const chk1 = fila.querySelector('[data-acudiente="1"]');
            const chk2 = fila.querySelector('[data-acudiente="2"]');

            fila.classList.remove('fila-ambos-asistieron', 'fila-uno-asistio', 'fila-ninguno-asistio');

            if (chk1.checked && chk2.checked) {
                fila.classList.add('fila-ambos-asistieron');
            } else if (chk1.checked || chk2.checked) {
                fila.classList.add('fila-uno-asistio');
            } else {
                fila.classList.add('fila-ninguno-asistio');
            }

            actualizarContadores();
        }

        // üéØ Filtro de b√∫squeda en tiempo real
        busqueda.addEventListener("input", (e) => {
            const valor = e.target.value.toLowerCase();
            btnClear.style.display = valor ? "flex" : "none";

            filtroActivo = null;
            statCards.forEach(card => card.classList.remove('active'));

            filas.forEach((fila) => {
                const texto = fila.innerText.toLowerCase();
                fila.style.display = texto.includes(valor) ? "" : "none";
            });
        });

        // üéØ Bot√≥n limpiar b√∫squeda
        btnClear.addEventListener("click", () => {
            busqueda.value = "";
            btnClear.style.display = "none";
            filtroActivo = null;
            statCards.forEach(card => card.classList.remove('active'));
            filas.forEach(fila => fila.style.display = "");
        });

        // üéØ Filtro por estad√≠sticas
        statCards.forEach(card => {
            card.addEventListener('click', () => {
                const filtro = card.dataset.filter;

                // Si ya est√° activo, desactivar
                if (filtroActivo === filtro) {
                    filtroActivo = null;
                    card.classList.remove('active');
                    filas.forEach(fila => fila.style.display = "");
                    busqueda.value = "";
                    btnClear.style.display = "none";
                    return;
                }

                // Activar nuevo filtro
                filtroActivo = filtro;
                statCards.forEach(c => c.classList.remove('active'));
                card.classList.add('active');
                busqueda.value = "";
                btnClear.style.display = "none";

                filas.forEach(fila => {
                    if (filtro === 'todos') {
                        fila.style.display = "";
                    } else if (filtro === 'ambos') {
                        fila.style.display = fila.classList.contains('fila-ambos-asistieron') ? "" : "none";
                    } else if (filtro === 'uno') {
                        fila.style.display = fila.classList.contains('fila-uno-asistio') ? "" : "none";
                    } else if (filtro === 'ninguno') {
                        fila.style.display = fila.classList.contains('fila-ninguno-asistio') ? "" : "none";
                    }
                });
            });
        });

        // üéØ Actualizaci√≥n de estado (cuando el usuario marca o desmarca)
        checkboxes.forEach((chk) => {
            chk.addEventListener("change", async (e) => {
                const fila = e.target.closest("tr");
                const id = fila.dataset.id;
                const acudiente = e.target.dataset.acudiente;
                const nuevoEstado = e.target.checked ? 1 : 0;

                if (!e.target.checked) {
                    const confirmar = confirm("¬øDeseas cambiar a NO ASISTI√ì?");
                    if (!confirmar) {
                        e.target.checked = true;
                        return;
                    }
                }

                const res = await fetch("/updateEstado", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ id, acudiente, estado: nuevoEstado }),
                });

                if (res.ok) {
                    // Actualizar nombres de acudientes
                    const acudienteInfo = fila.querySelector(`.acudiente-item:nth-child(${acudiente}) .acudiente-name`);
                    acudienteInfo.classList.remove('estado-verde', 'estado-rojo');
                    acudienteInfo.classList.add(nuevoEstado ? 'estado-verde' : 'estado-rojo');

                    // Actualizar clase de fila
                    actualizarClaseFila(fila);

                    // Efecto visual
                    fila.style.transition = "background-color 0.5s ease";
                    fila.style.backgroundColor = nuevoEstado ? "#c8f7c5" : "#f7c5c5";
                    setTimeout(() => (fila.style.backgroundColor = ""), 1500);
                }
            });
        });

        // ‚ö° SUSCRIPCI√ìN EN TIEMPO REAL
        const canal = supabase.channel("realtime:grados");

        canal.on(
            "postgres_changes",
            { event: "*", schema: "public", table: "grados" },
            (payload) => {
                const fila = document.querySelector(`tr[data-id='${payload.new.id}']`);
                if (!fila) return;

                const chk1 = fila.querySelector('[data-acudiente="1"]');
                const chk2 = fila.querySelector('[data-acudiente="2"]');
                const acudiente1Name = fila.querySelector('.acudiente-item:nth-child(1) .acudiente-name');
                const acudiente2Name = fila.querySelector('.acudiente-item:nth-child(2) .acudiente-name');

                if (payload.new.estado1 !== undefined) {
                    chk1.checked = payload.new.estado1;
                    acudiente1Name.classList.remove('estado-verde', 'estado-rojo');
                    acudiente1Name.classList.add(payload.new.estado1 ? 'estado-verde' : 'estado-rojo');
                }

                if (payload.new.estado2 !== undefined) {
                    chk2.checked = payload.new.estado2;
                    acudiente2Name.classList.remove('estado-verde', 'estado-rojo');
                    acudiente2Name.classList.add(payload.new.estado2 ? 'estado-verde' : 'estado-rojo');
                }

                // Actualizar clase de fila
                actualizarClaseFila(fila);

                // üí´ Efecto visual breve en la fila
                fila.style.transition = "background-color 0.4s ease";
                fila.style.backgroundColor = "#e7f3ff";
                setTimeout(() => (fila.style.backgroundColor = ""), 800);
            }
        );

        canal.subscribe();
        // Inicializar contadores
        actualizarContadores();
    </script>
